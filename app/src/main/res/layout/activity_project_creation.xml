<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project_creation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kirk.testfirebase2.ProjectCreationActivity">

    <TextView
        android:text="Date Needed Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDateDoneBy"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtLength"
        android:id="@+id/txtInputName"
        android:hint="Project Name"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Project Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/txtInputName"
        android:layout_alignBottom="@+id/txtInputName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescription"
        android:textSize="16sp"
        android:layout_below="@+id/txtInputName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtInputDescription"
        android:layout_below="@+id/txtInputName"
        android:layout_alignLeft="@+id/txtInputName"
        android:layout_alignStart="@+id/txtInputName"
        android:hint="Project Description"
        android:minLines="3"
        android:layout_width="match_parent" />

    <TextView
        android:text="Length of project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLength"
        android:textSize="16sp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/txtInputDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInputDescription"
        android:layout_toRightOf="@+id/txtLength"
        android:ems="10"
        android:hint="1"
        android:inputType="number"
        android:textAlignment="center" />

    <TextView
        android:text="Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/txtLength"
        android:layout_toRightOf="@+id/editText7"
        android:layout_toEndOf="@+id/editText7" />

    <TextView
        android:text="Minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignBaseline="@+id/txtLength"
        android:layout_alignBottom="@+id/txtLength"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/txtInputLengthHour"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="15"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <Button
        android:id="@+id/firebase_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:text="Click to change"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/txtDateDoneBy"
        android:layout_toEndOf="@+id/txtDateDoneBy"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

</RelativeLayout>
